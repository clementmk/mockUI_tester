{
  "manifest_version": 3,
  "name": "AUTO - Autonomous Mystery Shopper",
  "version": "1.0.0",
  "description": "AI-powered UX testing assistant. Test any flow with a right-click!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "AUTO - Quick Test"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8001/*"
  ]
}
